<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.kejar.indonesia.courtcounter.MainActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">
        <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    style="@style/TeamName"
                    android:text="Team A"/>

            <TextView
                    android:id="@+id/point_a_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="0"
                    style="@style/ScoreText"
                    android:layout_gravity="center_horizontal"/>

            <Button
                    android:id="@+id/three_point_for_team_a_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:layout_margin="8dp"
                    android:text="+3 Points"/>

            <Button
                    android:id="@+id/two_point_for_team_a_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textAllCaps="true"
                    android:text="+2 Points"/>

            <Button
                    android:id="@+id/free_throw_point_for_team_a_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textAllCaps="true"
                    android:text="Free Throw"/>
        </LinearLayout>

        <View
                android:layout_weight="0"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@android:color/darker_gray" />

        <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    style="@style/TeamName"
                    android:text="Team B"/>

            <TextView
                    android:id="@+id/point_b_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="0"
                    style="@style/ScoreText"
                    android:layout_gravity="center_horizontal"/>

            <Button
                    android:id="@+id/three_point_for_team_b_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:layout_margin="8dp"
                    android:text="+3 Points"/>

            <Button
                    android:id="@+id/two_point_for_team_b_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textAllCaps="true"
                    android:text="+2 Points"/>

            <Button
                    android:id="@+id/free_throw_point_for_team_b_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textAllCaps="true"
                    android:text="Free Throw"/>
        </LinearLayout>
    </LinearLayout>

    <Button
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:text="reset"/>
</RelativeLayout>
